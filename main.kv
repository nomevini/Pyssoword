<GerenciadorTelas>
    TelaPrincipal:
        name: 'principal'
        id: principal
        GridLayout:
            cols: 1
            rows: 5
            padding : 150, 100, 150, 100
            spacing: 10
            Label:
                id: pyssword
                text: "Pyssword"
                font_size: 100
                italic: True
            Label:
                id: senha
                text: ""
                font_size: 80
            RoundedButton:
                text: "Gerar"
                on_press: text = principal.exibirSenha()
                font_size: 60
                color: (0,0,0)
            RoundedButton:
                text: "Configurações"
                on_release: root.go_to('configuracao')
                font_size: 60
                color: (0,0,0)
            RoundedButton:
                text: "Copiar"
                on_press: principal.copiarParaAreaTransferencia()
                font_size: 60
                color: (0,0,0)
    TelaConfiguracao:
        name: 'configuracao'
        id: configuracao
        GridLayout:
            cols: 1
            rows:12
            Label:
                id: letrasMaiusculas
                text: "Letras maiúsculas: "
                font_size: 80

            Switch:
                id: sLetrasMaiusculas
                active: True

            Label:
                id: letrasMinusculas
                text: "Letras minúsculas: "
                font_size: 80

            Switch:
                id: sLetrasMinusculas
                active: True

            Label:
                id: numeros
                text: "Números: "
                font_size: 80

            Switch:
                id: sNumeros
                active: True

            Label:
                id: simbolos
                text: "Símbolos(!@$): "
                font_size: 80

            Switch:
                id: sSimbolos
                active: True

            Label:
                id: qntCaracteres
                text: "Quantidade de caracteres: "
                font_size: 80

            Slider:
                id: sQntCaracteres
                min:0
                max:50
                value: 10
                step: 1

            Label:
                text: str(sQntCaracteres.value)
                font_size: 80

            RoundedButton:
                text: "Voltar"
                on_press: configuracao.defineTypePassword(sLetrasMaiusculas.active, sLetrasMinusculas.active, sNumeros.active, sSimbolos.active, sQntCaracteres.value)
                on_release: root.go_to('principal')
                font_size: 60
                color: (0,0,0)
<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''


    canvas.before:

        Color:
            rgba: (245/255, 245/255, 245/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [35]    

           
