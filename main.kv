<GerenciadorTelas>
    TelaPrincipal:
        name: 'principal'
        id: principal
        GridLayout:
            cols: 1
            rows: 5
            padding : 150, 100, 150, 100
            spacing: 10
            Label:
                id: pyssword
                text: "Pyssword"
                font_size: 100
                italic: True
            Label:
                id: senha
                text: ""
                font_size: 50
            Button:
                background_normal: ''
                background_color: (245/255, 245/255, 245/255,1) 
                color: (0,0,0)
                text: "Gerar"
                on_press: text = principal.exibirSenha()
                
                on_press: self.color = (245/255, 245/255, 245/255,1) 
                on_touch_up: self.color = (0,0,0)

                font_size: 60
                
            Button:
                background_normal: ''
                background_color: (245/255, 245/255, 245/255,1) 
                color: (0,0,0)
                text: "Configurações"
                on_press: root.irParaTela('configuracao')

                on_press: self.color = (245/255, 245/255, 245/255,1) 
                on_touch_up: self.color = (0,0,0)

                font_size: 60
            Button:
                background_normal: ''
                background_color: (245/255, 245/255, 245/255,1) 
                color: (0,0,0)
                text: "Copiar"
                on_press: principal.copiarParaAreaTransferencia()

                on_press: self.color = (245/255, 245/255, 245/255,1) 
                on_touch_up: self.color = (0,0,0)

                font_size: 60
    TelaConfiguracao:
        name: 'configuracao'
        id: configuracao
        GridLayout:
            padding : 200, 0, 200, 0
            cols: 1
            rows:12
            Label:
                id: letrasMaiusculas
                text: "Letras maiúsculas: "
                font_size: 40

            Switch:
                id: sLetrasMaiusculas
                active: True

            Label:
                id: letrasMinusculas
                text: "Letras minúsculas: "
                font_size: 40

            Switch:
                id: sLetrasMinusculas
                active: True

            Label:
                id: numeros
                text: "Números: "
                font_size: 40

            Switch:
                id: sNumeros
                active: True

            Label:
                id: simbolos
                text: "Símbolos(!@$): "
                font_size: 40

            Switch:
                id: sSimbolos
                active: True

            Label:
                id: qntCaracteres
                text: "Quantidade de caracteres: "
                font_size: 40
            
            Label:
                text: str(sQntCaracteres.value)
                font_size: 40
                
            Slider:
                id: sQntCaracteres
                min:0
                max: 30
                value: 10
                step: 1



            Button:
                background_normal: ''
                background_color: (245/255, 245/255, 245/255,1) 
                color: (0,0,0)
                text: "Voltar"
                on_press: configuracao.defineTypePassword(sLetrasMaiusculas.active, sLetrasMinusculas.active, sNumeros.active, sSimbolos.active, sQntCaracteres.value)
                on_press: root.irParaTela('principal')
                
                on_press: self.color = (245/255, 245/255, 245/255,1) 
                on_touch_up: self.color = (0,0,0)

                font_size: 60
 
