
GerenciadorTelas:
    TelaPrincipal: 
        name: 'TelaPrincipal'
    TelaConfiguracao:
        name: 'TelaConfiguracao'

<TelaPrincipal>:
    GridLayout:
        cols: 3
    Label:
        id: pyssword
        text: "Pyssword"
        font_size: 40
        italic: True
    Label:
        id: senha
        text: ""

    Button:
        text: "Gerar"
        on_press: root.exibirSenha()
        font_size: 18
        
    Button:
        text: "Configurações"
        on_release: app.root.current = 'TelaConfiguracao'
        font_size: 18
        
    Button:
        text: "Copiar"
        on_press: root.copiarParaAreaTransferencia()    
        font_size: 18
        
<TelaConfiguracao>:
    GridLayout:

    Label:
        id: letrasMaiusculas
        text: "Letras maiúsculas: "
        font_size: 22

    Switch:
        id: sLetrasMaiusculas
        active: True
        
    Label:
        id: letrasMinusculas
        text: "Letras minúsculas: "
        font_size: 22

    Switch:
        id: sLetrasMinusculas
        active: True

    Label:
        id: numeros
        text: "Números: "
        font_size: 22

    Switch:
        id: sNumeros
        active: True

    Label:
        id: simbolos
        text: "Símbolos(!@$): "
        font_size: 22
    
    Switch:
        id: sSimbolos
        active: True

    Label:
        id: qntCaracteres
        text: "Quantidade de caracteres: "
        font_size: 22
    
    Slider:
        id: sQntCaracteres
        min:0
        max:50
        value: 10
        step: 1

    Label:
        text: str(sQntCaracteres.value)
        font_size: 18

    Button:
        text: "Voltar"
        on_press: root.defineTypePassword()
        on_release: app.root.current = 'TelaPrincipal'
        font_size: 18
