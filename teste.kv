
GerenciadorTelas:
    TelaPrincipal: 
        name: 'TelaPrincipal'
    TelaConfiguracao:
        name: 'TelaConfiguracao'

<TelaPrincipal>:
    GridLayout:

    Label:
        id: pyssword
        text: "Pyssword"
        font_size: 40
    
    Label:
        id: senha
        text: ""

    Button:
        text: "Gerar"
        on_press: root.exibirSenha()
    
    Button:
        text: "Configurações"
        on_release: app.root.current = 'TelaConfiguracao'

<TelaConfiguracao>:
    GridLayout:

    Label:
        id: letrasMaiusculas
        text: "Letras maiúsculas: "

    Switch:
        id: sLetrasMaiusculas
        active: True
        on_active: root.switch_click(self, self.active,'LetrasMaiusculas')
        
    Label:
        id: letrasMinusculas
        text: "Letras minúsculas: "

    Switch:
        id: sLetrasMinusculas
        active: True
        on_active: root.switch_click(self, self.active,'LetrasMinusculas')
    Label:
        id: numeros
        text: "Números: "

    Switch:
        id: sNumeros
        active: True
        on_active: root.switch_click(self, self.active,'Numeros')

    Label:
        id: simbolos
        text: "Símbolos(!@$): "
    
    Switch:
        id: sSimbolos
        active: True
        on_active: root.switch_click(self, self.active,'Simbolos')

    Label:
        id: qntCaracteres
        text: "Quantidade de caracteres: "
    
    Slider:
        id: sQntCaracteres
        min:0
        max:50
        value: 10
        step: 1

    Label:
        text: str(sQntCaracteres.value)

    Button:
        text: "Voltar"
        on_press: root.defineTypePassword()
        on_release: app.root.current = 'TelaPrincipal'
